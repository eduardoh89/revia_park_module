<!-- Header compacto -->
<div class="checkout-header">
    <a href="javascript:history.back()" class="back-button" aria-label="Volver">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"
            stroke-linecap="round" stroke-linejoin="round">
            <path d="M19 12H5M12 19l-7-7 7-7" />
        </svg>
    </a>
    <div class="header-info">
        <span class="title">Checkout</span>
        <span class="order-id">#{{orderId}}</span>
    </div>
    <div class="amount-badge">${{amount}}</div>
</div>

<!-- Resumen compacto -->
<div class="compact-summary">
    <span class="desc">Número de patente:</span>
    <span class="plate">{{licensePlate}}</span>
</div>

<!-- Contenedor del checkout de Klap -->
<div id="klapSection">
    <div class="loading-state">
        <div class="spinner"></div>
        <span>Cargando...</span>
    </div>
</div>

<!-- Seguridad -->
<div class="security-badge">
    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <rect x="3" y="11" width="18" height="11" rx="2" ry="2" />
        <path d="M7 11V7a5 5 0 0110 0v4" />
    </svg>
    <span>Pago seguro</span>
</div>

<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/lodash@4.17.21/lodash.min.js"></script>
<script src="https://sandbox.mcdesaqa.cl/pagos/checkout-flex/v1/main.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const orderId = '{{orderId}}';
        const container = document.getElementById('klapSection');

        if (typeof KLAP_FLEX === 'undefined') {
            container.innerHTML = '<div class="alert alert-error">Error al cargar. Recarga la página.</div>';
            return;
        }

        try {
            KLAP_FLEX.init({
                orderId: orderId,
                container: '#klapSection',
                debug: false,
                useModal: false,
                onSuccess: function (data) {
                    window.location.href = '/api/v1/payment/success';
                },
                onError: function (error) {
                    container.innerHTML = '<div class="alert alert-error">' + (error.message || 'Error al procesar') + '</div>';
                },
                onCancel: function () {
                    window.location.href = '/api/v1/payment/cancel';
                }
            });
        } catch (error) {
            container.innerHTML = '<div class="alert alert-error">' + error.message + '</div>';
        }
    });
</script>

